    <ImageButton
        android:id="@+id/imageButton3"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="@dimen/_image_button_width"
        android:layout_height="@dimen/_image_button_height"
        android:contentDescription="@string/_empty"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:srcCompat="@color/_calender_critical" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/_custom_button_style_shape"
        android:onClick="buttonOnClickSave"
        android:text="@string/button_create"
        android:textColor="@color/_main_primary"
        android:textSize="@dimen/_font_size_med"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:layout_constraintVertical_bias="0.69" />

    <ImageButton
        android:id="@+id/imageButtonPick"
        android:layout_width="41dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/_empty"
        app:layout_constraintBottom_toBottomOf="@+id/textDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textDate"
        app:layout_constraintTop_toTopOf="@+id/textDate"
        app:srcCompat="@drawable/ic_icon_event_rounded" />

    <ImageButton
        android:id="@+id/imageButtonColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.9"
        android:background="@android:color/transparent"
        android:contentDescription="@string/_empty"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toEndOf="@+id/imageViewColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:srcCompat="@drawable/ic_color_lens_black_24dp" />

    <ImageView
        android:id="@+id/imageViewColor"
        android:layout_width="230dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/_button_dark"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonColor"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonColor"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButtonColor" />

</android.support.constraint.ConstraintLayout>